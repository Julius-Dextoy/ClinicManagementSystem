@model DoctorDashboardViewModel

@{
    ViewData["Title"] = "Doctor Dashboard";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h4><i class="fas fa-tachometer-alt"></i> Welcome, Dr. @Model.Doctor.Name</h4>
        <p class="text-muted">Specialization: @Model.Doctor.Specialization</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="fas fa-calendar-day"></i> Today's Appointments</h5>
            </div>
            <div class="card-body">
                @if (!Model.TodayAppointments.Any())
                {
                    <p class="text-muted">No appointments scheduled for today.</p>
                }
                else
                {
                    <div class="list-group">
                        @foreach (var appointment in Model.TodayAppointments)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@appointment.Patient.Name</h6>
                                    <small class="text-@GetStatusBadge(appointment.Status)">@appointment.Status</small>
                                </div>
                                <p class="mb-1">Time: @appointment.AppointmentTime.ToString(@"hh\:mm")</p>
                                <small class="text-muted">@(appointment.Notes ?? "No notes")</small>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Upcoming Appointments</h5>
            </div>
            <div class="card-body">
                @if (!Model.UpcomingAppointments.Any())
                {
                    <p class="text-muted">No upcoming appointments.</p>
                }
                else
                {
                    <div class="list-group">
                        @foreach (var appointment in Model.UpcomingAppointments)
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@appointment.Patient.Name</h6>
                                    <small>@appointment.AppointmentDate.ToString("MMM dd")</small>
                                </div>
                                <p class="mb-1">Time: @appointment.AppointmentTime.ToString(@"hh\:mm")</p>
                                <small class="text-muted">
                                    Status:
                                    <span class="badge bg-@GetStatusBadge(appointment.Status)">@appointment.Status</span>
                                </small>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <a asp-controller="Doctor" asp-action="Appointments" class="btn btn-outline-primary">
                    <i class="fas fa-list"></i> View All Appointments
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    // LABEL: GetStatusBadge Function
    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Approved" => "success",
            "Pending" => "warning",
            "Cancelled" => "danger",
            "Completed" => "info",
            _ => "secondary"
        };
    }
}