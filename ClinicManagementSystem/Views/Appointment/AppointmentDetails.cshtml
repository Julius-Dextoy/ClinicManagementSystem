@model Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-primary">
                <i class="fas fa-calendar-check me-2"></i>Appointment Details
            </h1>
            <p class="text-muted">Appointment ID: #@Model.AppointmentId</p>
        </div>
        <div>
            <a asp-action="AllAppointments" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Appointments
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Appointment Information -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Appointment Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-primary mb-3">Appointment Details</h6>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Date</label>
                                <p class="mb-1">@Model.AppointmentDate.ToString("dddd, MMMM dd, yyyy")</p>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Time</label>
                                <p class="mb-1">@Model.AppointmentTime.ToString(@"hh\:mm")</p>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Status</label>
                                <p class="mb-1">
                                    <span class="badge bg-@GetStatusBadge(Model.Status)">
                                        @Model.Status
                                    </span>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Created On</label>
                                <p class="mb-1">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="fw-bold text-success mb-3">Doctor Information</h6>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Doctor</label>
                                <p class="mb-1">@Model.Doctor?.Name</p>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Specialization</label>
                                <p class="mb-1">@Model.Doctor?.Specialization</p>
                            </div>
                            <div class="mb-3">
                                <label class="fw-bold text-muted">Phone</label>
                                <p class="mb-1">@Model.Doctor?.Phone</p>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mt-4">
                            <h6 class="fw-bold text-warning">Appointment Notes</h6>
                            <div class="border rounded p-3 bg-light">
                                @Model.Notes
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Patient Information & Actions -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-injured me-2"></i>Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar-circle bg-success text-white rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; font-size: 18px;">
                            @GetInitials(Model.Patient?.Name ?? "Unknown")
                        </div>
                        <h5 class="fw-bold">@Model.Patient?.Name</h5>
                        <p class="text-muted">Age: @Model.Patient?.Age years</p>
                    </div>

                    <div class="patient-info">
                        <div class="info-item mb-2">
                            <i class="fas fa-phone me-2 text-muted"></i>
                            @(string.IsNullOrEmpty(Model.Patient?.Phone) ? "Not provided" : Model.Patient.Phone)
                        </div>
                        <div class="info-item mb-2">
                            <i class="fas fa-envelope me-2 text-muted"></i>
                            @Model.Patient?.User?.Email
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (User.IsInRole("Patient") && (Model.Status == "Pending" || Model.Status == "Approved") && Model.AppointmentDate >= DateTime.Today)
                        {
                            <button type="button" class="btn btn-warning" onclick="rescheduleAppointment(@Model.AppointmentId)">
                                <i class="fas fa-calendar-alt me-2"></i>Reschedule
                            </button>
                            <form asp-action="CancelAppointment" method="post" class="d-grid">
                                <input type="hidden" name="id" value="@Model.AppointmentId" />
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                    <i class="fas fa-times me-2"></i>Cancel Appointment
                                </button>
                            </form>
                        }

                        @if (User.IsInRole("Doctor") && Model.Status == "Approved" && Model.AppointmentDate <= DateTime.Today)
                        {
                            <form asp-action="CompleteAppointment" method="post" class="d-grid">
                                <input type="hidden" name="appointmentId" value="@Model.AppointmentId" />
                                <button type="submit" class="btn btn-success"
                                        onclick="return confirm('Mark this appointment as completed?')">
                                    <i class="fas fa-check me-2"></i>Mark Complete
                                </button>
                            </form>
                        }

                        @if (User.IsInRole("Doctor") && Model.Status == "Pending")
                        {
                            <form asp-action="UpdateAppointmentStatus" method="post" class="d-grid">
                                <input type="hidden" name="appointmentId" value="@Model.AppointmentId" />
                                <input type="hidden" name="status" value="Approved" />
                                <button type="submit" class="btn btn-info"
                                        onclick="return confirm('Approve this appointment?')">
                                    <i class="fas fa-thumbs-up me-2"></i>Approve Appointment
                                </button>
                            </form>
                        }

                        <button type="button" class="btn btn-outline-primary" onclick="window.print()">
                            <i class="fas fa-print me-2"></i>Print Details
                        </button>

                        @if (User.IsInRole("Doctor") && Model.Status != "Completed" && Model.Status != "Cancelled")
                        {
                            <button type="button" class="btn btn-outline-warning" onclick="sendReminder(@Model.AppointmentId)">
                                <i class="fas fa-bell me-2"></i>Send Reminder
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reschedule Modal -->
<div class="modal fade" id="rescheduleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reschedule Appointment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="rescheduleAppointmentId">
                <div class="form-group mb-3">
                    <label class="form-label">New Date</label>
                    <input type="date" class="form-control" id="newAppointmentDate" min="@DateTime.Today.ToString("yyyy-MM-dd")">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label">New Time</label>
                    <select class="form-select" id="newAppointmentTime">
                        <option value="">Select Time</option>
                        @foreach (var time in GetTimeSlots())
                        {
                            <option value="@time">@time.ToString(@"hh\:mm")</option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="confirmReschedule()">Reschedule</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function rescheduleAppointment(appointmentId) {
            document.getElementById('rescheduleAppointmentId').value = appointmentId;
            document.getElementById('newAppointmentDate').value = '';
            document.getElementById('newAppointmentTime').value = '';
            new bootstrap.Modal(document.getElementById('rescheduleModal')).show();
        }

        async function confirmReschedule() {
            const appointmentId = document.getElementById('rescheduleAppointmentId').value;
            const newDate = document.getElementById('newAppointmentDate').value;
            const newTime = document.getElementById('newAppointmentTime').value;

            if (!newDate || !newTime) {
                showAlert('Please select both date and time', 'error');
                return;
            }

            try {
                const response = await fetch('@Url.Action("RescheduleAppointment", "Appointment")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `appointmentId=${appointmentId}&newDate=${newDate}&newTime=${newTime}`
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('rescheduleModal')).hide();
                    setTimeout(() => location.reload(), 1500);
                } else {
                    const error = await response.json();
                    showAlert(error.message, 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Failed to reschedule appointment', 'error');
            }
        }

        async function sendReminder(appointmentId) {
            try {
                const response = await fetch('@Url.Action("SendAppointmentReminder", "Appointment")?appointmentId=' + appointmentId, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                setTimeout(() => location.reload(), 1500);
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Failed to send reminder', 'error');
            }
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentElement) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>

    <style>
        @@media print {
            .btn, .card-header .btn-close {
                display: none !important;
            }

            .card {
                border: 1px solid #000 !important;
            }

            .card-header {
                background-color: #f8f9fa !important;
                color: #000 !important;
            }
        }

        .avatar-circle {
            font-weight: bold;
        }
    </style>
}

@functions {
    // LABEL: GetStatusBadge Function
    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Completed" => "success",
            "Pending" => "warning",
            "Approved" => "info",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }

    // LABEL: GetInitials Function
    public string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name))
            return "??";

        var names = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        else if (names.Length == 1)
            return names[0].Length >= 2 ? names[0].Substring(0, 2).ToUpper() : names[0].ToUpper();
        else
            return "??";
    }

    // LABEL: GetTimeSlots Function
    public List<TimeSpan> GetTimeSlots()
    {
        var timeSlots = new List<TimeSpan>();
        var startTime = new TimeSpan(9, 0, 0);
        var endTime = new TimeSpan(17, 0, 0);

        for (var time = startTime; time <= endTime; time = time.Add(new TimeSpan(0, 30, 0)))
        {
            timeSlots.Add(time);
        }

        return timeSlots;
    }
}