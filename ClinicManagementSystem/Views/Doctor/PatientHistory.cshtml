@model PatientDetailsViewModel

@{
    ViewData["Title"] = "Patient History";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-primary">
                <i class="fas fa-history me-2"></i>Patient History - @Model.Patient.Name
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Doctor" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Doctor" asp-action="Appointments">Appointments</a></li>
                    <li class="breadcrumb-item active">@Model.Patient.Name</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-controller="Doctor" asp-action="Appointments" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Appointments
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Patient Information -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user-injured me-2"></i>Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-circle bg-primary text-white rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px; font-size: 24px;">
                            @GetInitials(Model.Patient.Name)
                        </div>
                        <h4 class="fw-bold">@Model.Patient.Name</h4>
                        <p class="text-muted">Patient ID: #@Model.Patient.PatientId</p>
                    </div>

                    <div class="patient-info">
                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Age</label>
                            <p class="mb-1">
                                <i class="fas fa-birthday-cake me-2 text-primary"></i>
                                @Model.Patient.Age years
                            </p>
                        </div>

                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Phone</label>
                            <p class="mb-1">
                                <i class="fas fa-phone me-2 text-primary"></i>
                                @(string.IsNullOrEmpty(Model.Patient.Phone) ? "Not provided" : Model.Patient.Phone)
                            </p>
                        </div>

                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Email</label>
                            <p class="mb-1">
                                <i class="fas fa-envelope me-2 text-primary"></i>
                                @Model.Patient.User?.Email
                            </p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Patient.Address))
                        {
                            <div class="info-item mb-3">
                                <label class="fw-bold text-muted">Address</label>
                                <p class="mb-1">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                    @Model.Patient.Address
                                </p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Patient.MedicalHistory))
                        {
                            <div class="info-item mb-3">
                                <label class="fw-bold text-muted">Medical History</label>
                                <p class="mb-1">
                                    <i class="fas fa-file-medical me-2 text-primary"></i>
                                    @Model.Patient.MedicalHistory
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointment History -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-check me-2"></i>Appointment History
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Appointments.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Appointment History</h5>
                            <p class="text-muted">This patient hasn't had any appointments yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Doctor</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-bold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@appointment.AppointmentDate.ToString("ddd")</small>
                                            </td>
                                            <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                            <td>@appointment.Doctor?.Name</td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadge(appointment.Status)">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(appointment.Notes))
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                                else
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-info"
                                                            data-bs-toggle="tooltip" data-bs-placement="top"
                                                            title="@appointment.Notes">
                                                        <i class="fas fa-sticky-note"></i> View Notes
                                                    </button>
                                                }
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                        onclick="addMedicalNotes(@appointment.AppointmentId)">
                                                    <i class="fas fa-edit"></i> Add Notes
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>

            <!-- Statistics Card -->
            <div class="card shadow mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-chart-bar me-2"></i>Appointment Statistics
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h3 class="text-primary fw-bold">@Model.Appointments.Count</h3>
                                <p class="text-muted mb-0">Total Appointments</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h3 class="text-success fw-bold">@Model.Appointments.Count(a => a.Status == "Completed")</h3>
                                <p class="text-muted mb-0">Completed</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h3 class="text-warning fw-bold">@Model.Appointments.Count(a => a.Status == "Pending")</h3>
                                <p class="text-muted mb-0">Pending</p>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="border rounded p-3">
                                <h3 class="text-danger fw-bold">@Model.Appointments.Count(a => a.Status == "Cancelled")</h3>
                                <p class="text-muted mb-0">Cancelled</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Notes Modal -->
<div class="modal fade" id="notesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Medical Notes</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="appointmentId">
                <div class="form-group">
                    <label for="medicalNotes" class="form-label">Medical Notes</label>
                    <textarea class="form-control" id="medicalNotes" rows="5" placeholder="Enter medical notes and observations..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveMedicalNotes()">Save Notes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addMedicalNotes(appointmentId) {
            document.getElementById('appointmentId').value = appointmentId;
            document.getElementById('medicalNotes').value = '';
            new bootstrap.Modal(document.getElementById('notesModal')).show();
        }

        async function saveMedicalNotes() {
            const appointmentId = document.getElementById('appointmentId').value;
            const notes = document.getElementById('medicalNotes').value;

            try {
                const response = await fetch('/Doctor/AddMedicalNotes', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        appointmentId: appointmentId,
                        notes: notes
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    showAlert(result.message, 'success');
                    bootstrap.Modal.getInstance(document.getElementById('notesModal')).hide();
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('Failed to save notes', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Failed to save notes', 'error');
            }
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentElement) {
                    alertDiv.remove();
                }
            }, 5000);
        }

        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });
    </script>
}

@functions {
    public string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name))
            return "??";

        var names = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        else if (names.Length == 1)
            return names[0].Length >= 2 ? names[0].Substring(0, 2).ToUpper() : names[0].ToUpper();
        else
            return "??";
    }

    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Completed" => "success",
            "Pending" => "warning",
            "Approved" => "info",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}