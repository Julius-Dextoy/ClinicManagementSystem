@model PatientDetailsViewModel

@{
    ViewData["Title"] = "Patient Details";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-primary">
                <i class="fas fa-user-injured me-2"></i>Patient Details
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Patients">Patients</a></li>
                    <li class="breadcrumb-item active">@Model.Patient.Name</li>
                </ol>
            </nav>
        </div>
        <div>
            <a asp-controller="Admin" asp-action="Patients" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Patients
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Patient Information -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Patient Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="avatar-circle bg-primary text-white rounded-circle mx-auto d-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px; font-size: 24px;">
                            @GetInitials(Model.Patient.Name)
                        </div>
                        <h4 class="fw-bold">@Model.Patient.Name</h4>
                        <p class="text-muted">Patient ID: #@Model.Patient.PatientId</p>
                    </div>

                    <div class="patient-info">
                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Email</label>
                            <p class="mb-1">
                                <i class="fas fa-envelope me-2 text-primary"></i>
                                @Model.Patient.User?.Email
                            </p>
                        </div>

                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Phone</label>
                            <p class="mb-1">
                                <i class="fas fa-phone me-2 text-primary"></i>
                                @(string.IsNullOrEmpty(Model.Patient.Phone) ? "Not provided" : Model.Patient.Phone)
                            </p>
                        </div>

                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Age</label>
                            <p class="mb-1">
                                <i class="fas fa-birthday-cake me-2 text-primary"></i>
                                @Model.Patient.Age years
                            </p>
                        </div>

                        <div class="info-item mb-3">
                            <label class="fw-bold text-muted">Registration Date</label>
                            <p class="mb-1">
                                <i class="fas fa-calendar-plus me-2 text-primary"></i>
                                @Model.Patient.RegistrationDate.ToString("MMM dd, yyyy")
                            </p>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Patient.Address))
                        {
                            <div class="info-item mb-3">
                                <label class="fw-bold text-muted">Address</label>
                                <p class="mb-1">
                                    <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                    @Model.Patient.Address
                                </p>
                            </div>
                        }
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Edit Information
                        </button>
                        <button class="btn btn-outline-primary">
                            <i class="fas fa-envelope me-2"></i>Send Message
                        </button>
                    </div>
                </div>
            </div>

            <!-- Medical History -->
            @if (!string.IsNullOrEmpty(Model.Patient.MedicalHistory))
            {
                <div class="card shadow mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-file-medical me-2"></i>Medical History
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Model.Patient.MedicalHistory</p>
                    </div>
                </div>
            }
        </div>

        <!-- Appointment History -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-calendar-check me-2"></i>Appointment History
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Appointments.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No Appointments</h5>
                            <p class="text-muted">This patient hasn't booked any appointments yet.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date & Time</th>
                                        <th>Doctor</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model.Appointments)
                                    {
                                        <tr>
                                            <td>
                                                <div class="fw-bold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                                <small class="text-muted">@appointment.AppointmentTime.ToString(@"hh\:mm")</small>
                                            </td>
                                            <td>@appointment.Doctor?.Name</td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadge(appointment.Status)">
                                                    @appointment.Status
                                                </span>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(appointment.Notes))
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                                else
                                                {
                                                    <span class="text-truncate" style="max-width: 150px;" title="@appointment.Notes">
                                                        @appointment.Notes
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name))
            return "??";

        var names = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        else if (names.Length == 1)
            return names[0].Length >= 2 ? names[0].Substring(0, 2).ToUpper() : names[0].ToUpper();
        else
            return "??";
    }

    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Approved" => "success",
            "Pending" => "warning",
            "Cancelled" => "danger",
            "Completed" => "info",
            _ => "secondary"
        };
    }
}