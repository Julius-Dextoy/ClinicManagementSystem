@{
    ViewData["Title"] = "Debug Information";
}

<div class="container">
    <h2>Debug Information</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <h5>Error:</h5>
            <p>@ViewBag.Error</p>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-user me-2"></i>User Information</h4>
        </div>
        <div class="card-body">
            @if (ViewBag.User != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>User ID:</strong> @ViewBag.User.Id</p>
                        <p><strong>Username:</strong> @ViewBag.User.UserName</p>
                        <p><strong>Email:</strong> @ViewBag.User.Email</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Full Name:</strong> @ViewBag.User.FullName</p>
                        <p><strong>Phone:</strong> @ViewBag.User.PhoneNumber</p>
                        <p><strong>Created At:</strong> @ViewBag.User.CreatedAt</p>
                    </div>
                </div>
            }
            else
            {
                <p class="text-danger">No user information found!</p>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fas fa-user-injured me-2"></i>Patient Information</h4>
        </div>
        <div class="card-body">
            @if (ViewBag.Patient != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Patient ID:</strong> @ViewBag.Patient.PatientId</p>
                        <p><strong>Name:</strong> @ViewBag.Patient.Name</p>
                        <p><strong>Age:</strong> @ViewBag.Patient.Age</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Phone:</strong> @ViewBag.Patient.Phone</p>
                        <p><strong>Address:</strong> @ViewBag.Patient.Address</p>
                        <p><strong>Registered:</strong> @ViewBag.Patient.RegistrationDate</p>
                    </div>
                </div>
            }
            else
            {
                <p class="text-danger">No patient profile found!</p>
                <p class="text-muted">A patient profile should be automatically created when you book your first appointment.</p>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fas fa-user-md me-2"></i>Doctors Information</h4>
        </div>
        <div class="card-body">
            <p><strong>Active Doctors Count:</strong> @ViewBag.DoctorsCount</p>
            @if (ViewBag.Doctors != null && ViewBag.Doctors.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Specialization</th>
                                <th>Phone</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var doctor in ViewBag.Doctors)
                            {
                                <tr>
                                    <td>@doctor.DoctorId</td>
                                    <td>@doctor.Name</td>
                                    <td>@doctor.Specialization</td>
                                    <td>@doctor.Phone</td>
                                    <td>
                                        <span class="badge bg-@(doctor.IsActive ? "success" : "danger")">
                                            @(doctor.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-danger">No doctors found in database!</p>
                <p class="text-muted">Please contact administrator to add doctors to the system.</p>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Appointments</h4>
        </div>
        <div class="card-body">
            <p><strong>Total Appointments:</strong> @ViewBag.AppointmentsCount</p>
            @if (ViewBag.Appointments != null && ViewBag.Appointments.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Doctor</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Status</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in ViewBag.Appointments)
                            {
                                <tr>
                                    <td>@appointment.AppointmentId</td>
                                    <td>@appointment.Doctor.Name</td>
                                    <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                                    <td>@appointment.AppointmentTime.ToString(@"hh\:mm")</td>
                                    <td>
                                        <span class="badge bg-@(appointment.Status == "Pending" ? "warning" : appointment.Status == "Approved" ? "success" : appointment.Status == "Completed" ? "info" : "danger")">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td>@appointment.CreatedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-warning">No appointments found</p>
                <p class="text-muted">You haven't booked any appointments yet.</p>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Book" class="btn btn-primary">
            <i class="fas fa-calendar-plus"></i> Book Appointment
        </a>
        <a asp-action="MyAppointments" class="btn btn-secondary">
            <i class="fas fa-list"></i> My Appointments
        </a>
        <a asp-action="TestBooking" class="btn btn-warning">
            <i class="fas fa-vial"></i> Test Booking
        </a>
    </div>
</div>