@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary mb-3">Privacy Policy</h1>
                <p class="lead text-muted">Last updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
            </div>

            <!-- Introduction -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Introduction</h2>
                    <p class="mb-0">
                        At Clinic Management System, we are committed to protecting your privacy and ensuring the security of your personal and health information.
                        This Privacy Policy explains how we collect, use, disclose, and safeguard your information when you use our healthcare management platform.
                    </p>
                </div>
            </div>

            <!-- Information We Collect -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Information We Collect</h2>

                    <h5 class="fw-bold text-dark mt-4">Personal Information</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-user text-primary me-2"></i>Full name and contact details</li>
                        <li class="mb-2"><i class="fas fa-envelope text-primary me-2"></i>Email address and phone number</li>
                        <li class="mb-2"><i class="fas fa-id-card text-primary me-2"></i>Date of birth and age</li>
                        <li class="mb-2"><i class="fas fa-home text-primary me-2"></i>Address and location information</li>
                    </ul>

                    <h5 class="fw-bold text-dark mt-4">Health Information</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-heartbeat text-primary me-2"></i>Medical history and conditions</li>
                        <li class="mb-2"><i class="fas fa-calendar-check text-primary me-2"></i>Appointment schedules</li>
                        <li class="mb-2"><i class="fas fa-stethoscope text-primary me-2"></i>Doctor consultations and notes</li>
                        <li class="mb-2"><i class="fas fa-pills text-primary me-2"></i>Treatment information</li>
                    </ul>

                    <h5 class="fw-bold text-dark mt-4">Technical Information</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-desktop text-primary me-2"></i>IP address and browser type</li>
                        <li class="mb-2"><i class="fas fa-cookie text-primary me-2"></i>Cookies and usage data</li>
                        <li class="mb-2"><i class="fas fa-chart-line text-primary me-2"></i>System activity and logs</li>
                    </ul>
                </div>
            </div>

            <!-- How We Use Your Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">How We Use Your Information</h2>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-user-md text-primary fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Healthcare Services</h6>
                                    <p class="text-muted small">To provide medical care and manage appointments</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-comments text-primary fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Communication</h6>
                                    <p class="text-muted small">To send appointment reminders and updates</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-shield-alt text-primary fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Security</h6>
                                    <p class="text-muted small">To protect against fraud and ensure system security</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="fas fa-chart-bar text-primary fa-lg"></i>
                                </div>
                                <div class="flex-grow-1 ms-3">
                                    <h6 class="fw-bold">Improvements</h6>
                                    <p class="text-muted small">To enhance our services and user experience</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Sharing and Disclosure -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Data Sharing and Disclosure</h2>

                    <p>We do not sell or rent your personal information to third parties. We may share your information only in the following circumstances:</p>

                    <div class="alert alert-info">
                        <h6 class="alert-heading fw-bold"><i class="fas fa-info-circle me-2"></i>Healthcare Providers</h6>
                        <p class="mb-0">With authorized medical professionals involved in your care</p>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading fw-bold"><i class="fas fa-gavel me-2"></i>Legal Requirements</h6>
                        <p class="mb-0">When required by law or to comply with legal processes</p>
                    </div>

                    <div class="alert alert-success">
                        <h6 class="alert-heading fw-bold"><i class="fas fa-shield-alt me-2"></i>Safety Emergencies</h6>
                        <p class="mb-0">In emergency situations to protect your vital interests</p>
                    </div>
                </div>
            </div>

            <!-- Data Security -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Data Security</h2>

                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="security-feature">
                                <i class="fas fa-lock fa-2x text-success mb-3"></i>
                                <h6>Encryption</h6>
                                <p class="text-muted small">All data is encrypted in transit and at rest</p>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="security-feature">
                                <i class="fas fa-user-shield fa-2x text-success mb-3"></i>
                                <h6>Access Controls</h6>
                                <p class="text-muted small">Role-based access to protect sensitive information</p>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <div class="security-feature">
                                <i class="fas fa-history fa-2x text-success mb-3"></i>
                                <h6>Regular Audits</h6>
                                <p class="text-muted small">Continuous monitoring and security assessments</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Your Rights -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Your Rights</h2>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-primary">
                                <tr>
                                    <th>Right</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Access</strong></td>
                                    <td>Request copies of your personal data</td>
                                </tr>
                                <tr>
                                    <td><strong>Correction</strong></td>
                                    <td>Request correction of inaccurate information</td>
                                </tr>
                                <tr>
                                    <td><strong>Deletion</strong></td>
                                    <td>Request deletion of your personal data</td>
                                </tr>
                                <tr>
                                    <td><strong>Restriction</strong></td>
                                    <td>Request restriction of processing your data</td>
                                </tr>
                                <tr>
                                    <td><strong>Portability</strong></td>
                                    <td>Request transfer of your data to another organization</td>
                                </tr>
                                <tr>
                                    <td><strong>Objection</strong></td>
                                    <td>Object to processing of your personal data</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Cookies -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Cookies and Tracking</h2>

                    <p>We use cookies and similar tracking technologies to enhance your experience on our platform:</p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                                <div>
                                    <h6 class="fw-bold mb-1">Essential Cookies</h6>
                                    <p class="text-muted small mb-0">Required for system functionality and security</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-check-circle text-success me-3 mt-1"></i>
                                <div>
                                    <h6 class="fw-bold mb-1">Performance Cookies</h6>
                                    <p class="text-muted small mb-0">Help us improve our website performance</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-light border">
                        <p class="mb-0">
                            <i class="fas fa-cookie-bite text-warning me-2"></i>
                            <strong>Cookie Settings:</strong> You can control cookie preferences through your browser settings.
                            However, disabling essential cookies may affect system functionality.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Contact Information -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Contact Us</h2>

                    <p>If you have any questions about this Privacy Policy or your personal data, please contact us:</p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="contact-method mb-3">
                                <i class="fas fa-envelope text-primary me-3"></i>
                                <strong>Email:</strong> privacy@clinicmanagement.com
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-method mb-3">
                                <i class="fas fa-phone text-primary me-3"></i>
                                <strong>Phone:</strong> (555) 123-HELP
                            </div>
                        </div>
                    </div>

                    <div class="contact-method">
                        <i class="fas fa-map-marker-alt text-primary me-3"></i>
                        <strong>Address:</strong> 123 Privacy Lane, Security City, SC 12345
                    </div>
                </div>
            </div>

            <!-- Policy Updates -->
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h2 class="h4 fw-bold text-primary mb-3">Policy Updates</h2>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Note:</strong> We may update this Privacy Policy from time to time.
                        We will notify you of any changes by posting the new Privacy Policy on this page and updating the "Last updated" date.
                    </div>

                    <p class="mb-0">
                        Your continued use of our services after any modifications to this Privacy Policy will constitute your acknowledgment of the modifications
                        and your consent to abide and be bound by the modified Privacy Policy.
                    </p>
                </div>
            </div>

            <!-- Back to Home -->
            <div class="text-center mt-5">
                <a asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-home me-2"></i>Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .security-feature {
        transition: transform 0.3s ease;
    }

        .security-feature:hover {
            transform: translateY(-5px);
        }

    .contact-method {
        padding: 10px 0;
        border-bottom: 1px solid #e9ecef;
    }

        .contact-method:last-child {
            border-bottom: none;
        }

    .table th {
        border-color: #0d6efd;
        background-color: #0d6efd;
        color: white;
    }

    .card {
        border-radius: 12px;
    }
</style>