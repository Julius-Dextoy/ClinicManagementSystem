@model List<Appointment>

    @{
    ViewData["Title"] = "Manage Appointments";
    }

    <div class="container-fluid">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 fw-bold text-primary">
                    <i class="fas fa-calendar-alt me-2"></i>Manage Appointments
                </h1>
                <p class="text-muted">View and manage all appointments in the system</p>
            </div>
            <div>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        }

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    Total Appointments
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Pending
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.Count(a => a.Status == "Pending")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-clock fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    Confirmed
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.Count(a => a.Status == "Confirmed" || a.Status == "Approved")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-info shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                    Today's Appointments
                                </div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    @Model.Count(a => a.AppointmentDate.Date == DateTime.Today && a.Status != "Cancelled")
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointments Table -->
        <div class="card shadow mb-4">
            <div class="card-header bg-white py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list me-2"></i>Appointments List
                    </h6>
                </div>
            </div>
            <div class="card-body">
                @if (!Model.Any())
                {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Appointments Found</h4>
                    <p class="text-muted">There are no appointments scheduled in the system yet.</p>
                </div>
                }
                else
                {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="appointmentsTable" width="100%" cellspacing="0">
                        <thead class="table-light">
                            <tr>
                                <th>Appointment ID</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th>Notes</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.OrderByDescending(a => a.AppointmentDate).ThenBy(a => a.AppointmentTime))
                            {
                            <tr>
                                <td>
                                    <span class="badge bg-secondary">#@appointment.AppointmentId</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; font-size: 12px;">
                                            @GetInitials(appointment.Patient?.Name ?? "Unknown")
                                        </div>
                                        <div>
                                            <div class="fw-bold">@appointment.Patient?.Name</div>
                                            <small class="text-muted">@appointment.Patient?.Phone</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-success text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; font-size: 12px;">
                                            @GetInitials(appointment.Doctor?.Name ?? "Unknown")
                                        </div>
                                        <div>
                                            <div class="fw-bold">Dr. @appointment.Doctor?.Name</div>
                                            <small class="text-muted">@appointment.Doctor?.Specialization</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold">@appointment.AppointmentDate.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@appointment.AppointmentTime.ToString(@"hh\:mm")</small>
                                    @if (appointment.AppointmentDate.Date == DateTime.Today)
                                    {
                                    <div class="badge bg-warning mt-1">Today</div>
                                    }
                                    else if (appointment.AppointmentDate.Date == DateTime.Today.AddDays(1))
                                    {
                                    <div class="badge bg-info mt-1">Tomorrow</div>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-@GetStatusBadge(appointment.Status)">
                                        @if (appointment.Status == "Pending")
                                        {
                                        <i class="fas fa-clock me-1"></i>
                                        }
                                        else if (appointment.Status == "Approved" || appointment.Status == "Confirmed")
                                        {
                                        <i class="fas fa-check-circle me-1"></i>
                                        }
                                        else if (appointment.Status == "Cancelled")
                                        {
                                        <i class="fas fa-times-circle me-1"></i>
                                        }
                                        else if (appointment.Status == "Completed")
                                        {
                                        <i class="fas fa-check-double me-1"></i>
                                        }
                                        @appointment.Status
                                    </span>
                                </td>
                                <td>
                                    @if (string.IsNullOrEmpty(appointment.Notes))
                                    {
                                    <span class="text-muted">No notes</span>
                                    }
                                    else
                                    {
                                    <span class="text-truncate" style="max-width: 200px;"
                                          data-bs-toggle="tooltip" data-bs-placement="top"
                                          title="@appointment.Notes">
                                        @(appointment.Notes.Length > 50 ? appointment.Notes.Substring(0, 50) + "..." : appointment.Notes)
                                    </span>
                                    }
                                </td>
                                <td>
                                    <small>@appointment.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    <br>
                                    <small class="text-muted">@appointment.CreatedAt.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <!-- Status Update Dropdown -->
                                        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" title="Update Status">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <form method="post" asp-controller="Appointment" asp-action="UpdateAppointmentStatus" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                                    <input type="hidden" name="status" value="Confirmed" />
                                                    <button type="submit" class="dropdown-item text-success">
                                                        <i class="fas fa-check me-2"></i>Confirm
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form method="post" asp-controller="Appointment" asp-action="UpdateAppointmentStatus" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                                    <input type="hidden" name="status" value="Pending" />
                                                    <button type="submit" class="dropdown-item text-warning">
                                                        <i class="fas fa-clock me-2"></i>Mark Pending
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form method="post" asp-controller="Appointment" asp-action="UpdateAppointmentStatus" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                                    <input type="hidden" name="status" value="Completed" />
                                                    <button type="submit" class="dropdown-item text-info">
                                                        <i class="fas fa-check-double me-2"></i>Mark Completed
                                                    </button>
                                                </form>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <form method="post" asp-controller="Appointment" asp-action="UpdateAppointmentStatus" class="d-inline">
                                                    <input type="hidden" name="appointmentId" value="@appointment.AppointmentId" />
                                                    <input type="hidden" name="status" value="Cancelled" />
                                                    <button type="submit" class="dropdown-item text-danger"
                                                            onclick="return confirm('Are you sure you want to cancel this appointment?')">
                                                        <i class="fas fa-times me-2"></i>Cancel
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>

                                        <!-- View Details Button -->
                                        <button type="button" class="btn btn-sm btn-outline-info" title="View Details"
                                                data-bs-toggle="modal" data-bs-target="#detailsModal@(appointment.AppointmentId)">
                                            <i class="fas fa-eye"></i>
                                        </button>

                                        <!-- Delete Button -->
                                        <form method="post" asp-controller="Appointment" asp-action="DeleteAppointment" class="d-inline">
                                            <input type="hidden" name="id" value="@appointment.AppointmentId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    title="Delete Appointment"
                                                    onclick="return confirm('Are you sure you want to delete this appointment? This action cannot be undone.')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>

                                    <!-- Details Modal -->
                                    <div class="modal fade" id="detailsModal@(appointment.AppointmentId)" tabindex="-1">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Appointment Details - #@appointment.AppointmentId</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h6 class="fw-bold text-primary mb-3">
                                                                <i class="fas fa-user me-2"></i>Patient Information
                                                            </h6>
                                                            <p><strong>Name:</strong> @appointment.Patient?.Name</p>
                                                            <p><strong>Age:</strong> @appointment.Patient?.Age years</p>
                                                            <p><strong>Phone:</strong> @(string.IsNullOrEmpty(appointment.Patient?.Phone) ? "Not provided" : appointment.Patient.Phone)</p>
                                                            <p><strong>Email:</strong> @appointment.Patient?.User?.Email</p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <h6 class="fw-bold text-success mb-3">
                                                                <i class="fas fa-user-md me-2"></i>Doctor Information
                                                            </h6>
                                                            <p><strong>Name:</strong> Dr. @appointment.Doctor?.Name</p>
                                                            <p><strong>Specialization:</strong> @appointment.Doctor?.Specialization</p>
                                                            <p><strong>Phone:</strong> @appointment.Doctor?.Phone</p>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h6 class="fw-bold text-info mb-3">
                                                                <i class="fas fa-calendar me-2"></i>Appointment Details
                                                            </h6>
                                                            <p><strong>Date:</strong> @appointment.AppointmentDate.ToString("dddd, MMMM dd, yyyy")</p>
                                                            <p><strong>Time:</strong> @appointment.AppointmentTime.ToString(@"hh\:mm")</p>
                                                            <p><strong>Status:</strong> <span class="badge bg-@GetStatusBadge(appointment.Status)">@appointment.Status</span></p>
                                                            <p><strong>Created:</strong> @appointment.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <h6 class="fw-bold text-warning mb-3">
                                                                <i class="fas fa-sticky-note me-2"></i>Notes & Additional Information
                                                            </h6>
                                                            <div class="border rounded p-3 bg-light">
                                                                @if (string.IsNullOrEmpty(appointment.Notes))
                                                                {
                                                                <span class="text-muted">No notes provided for this appointment.</span>
                                                                }
                                                                else
                                                                {
                                                                @appointment.Notes
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <a asp-controller="Appointment" asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId"
                                                       class="btn btn-primary">View Full Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                }
            </div>
        </div>
    </div>

    @functions {
    // LABEL: GetInitials Function
    public string GetInitials(string name)
    {
    if (string.IsNullOrEmpty(name))
    return "??";

    var names = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
    if (names.Length >= 2)
    return $"{names[0][0]}{names[1][0]}".ToUpper();
    else if (names.Length == 1)
    return names[0].Length >= 2 ? names[0].Substring(0, 2).ToUpper() : names[0].ToUpper();
    else
    return "??";
    }

    // LABEL: GetStatusBadge Function
    public string GetStatusBadge(string status)
    {
    return status switch
    {
    "Approved" or "Confirmed" => "success",
    "Pending" => "warning",
    "Cancelled" => "danger",
    "Completed" => "info",
    _ => "secondary"
    };
    }
    }

    @section Scripts {
    <script>
        // Initialize tooltips
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Initialize DataTable
            $('#appointmentsTable').DataTable({
                pageLength: 10,
                responsive: true,
                order: [[3, 'desc']],
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rt<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search appointments..."
                }
            });

            // Auto-dismiss alerts after 5 seconds
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>

    <style>
        .avatar-circle {
            font-weight: bold;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.5px;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-header {
            border-bottom: 1px solid #e3e6f0;
            border-radius: 10px 10px 0 0 !important;
        }

        .border-left-primary {
            border-left: 4px solid #4e73df !important;
        }

        .border-left-success {
            border-left: 4px solid #1cc88a !important;
        }

        .border-left-warning {
            border-left: 4px solid #f6c23e !important;
        }

        .border-left-info {
            border-left: 4px solid #36b9cc !important;
        }

        .badge {
            font-size: 0.75em;
        }
    </style>
    }
