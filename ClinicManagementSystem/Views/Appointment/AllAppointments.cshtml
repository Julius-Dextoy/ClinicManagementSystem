@model List<Appointment>

@{
    ViewData["Title"] = "All Appointments - Admin";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold text-primary">
                <i class="fas fa-list-alt me-2"></i>All Appointments
            </h1>
            <p class="text-muted">Admin Management - View and manage all appointments</p>
        </div>
        <div>
            <a asp-action="Dashboard" asp-controller="Admin" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back 
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle me-2"></i>No appointments found!</h5>
            <p>There are no appointments in the system yet.</p>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-calendar-alt me-2"></i>Appointment List
                    <span class="badge bg-light text-dark ms-2">@Model.Count total</span>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Patient</th>
                                <th>Doctor</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>#@appointment.AppointmentId</strong>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-success rounded-circle d-flex align-items-center justify-content-center me-2">
                                                <span class="text-white fw-bold small">@GetInitials(appointment.Patient?.Name ?? "U")</span>
                                            </div>
                                            <div>
                                                <strong>@appointment.Patient?.Name</strong>
                                                <div class="text-muted small">@appointment.Patient?.User?.Email</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="avatar-sm bg-primary rounded-circle d-flex align-items-center justify-content-center me-2">
                                                <span class="text-white fw-bold small">@GetInitials(appointment.Doctor?.Name ?? "D")</span>
                                            </div>
                                            <div>
                                                <strong>@appointment.Doctor?.Name</strong>
                                                <div class="text-muted small">@appointment.Doctor?.Specialization</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</strong>
                                            <div class="text-muted small">@appointment.AppointmentTime.ToString(@"hh\:mm")</div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-@GetStatusBadge(appointment.Status)">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @appointment.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="AppointmentDetails" asp-route-id="@appointment.AppointmentId"
                                               class="btn btn-sm btn-outline-primary" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>

                                            <!-- Delete Button -->
                                            <form asp-action="DeleteAppointment" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@appointment.AppointmentId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        title="Delete Appointment"
                                                        onclick="return confirm('Are you sure you want to delete appointment #@appointment.AppointmentId? This action cannot be undone.')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <small class="text-muted">
                    <i class="fas fa-info-circle"></i>
                    Showing @Model.Count appointments •
                    @Model.Count(a => a.Status == "Pending") pending •
                    @Model.Count(a => a.Status == "Approved") approved •
                    @Model.Count(a => a.Status == "Completed") completed •
                    @Model.Count(a => a.Status == "Cancelled") cancelled
                </small>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);

            // Initialize tooltips
            $('[title]').tooltip();
        });
    </script>

    <style>
        .avatar-sm {
            width: 32px;
            height: 32px;
            font-size: 12px;
        }
    </style>
}

@functions {
    public string GetStatusBadge(string status)
    {
        return status switch
        {
            "Approved" => "success",
            "Pending" => "warning",
            "Cancelled" => "danger",
            "Completed" => "info",
            _ => "secondary"
        };
    }

    public string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name))
            return "??";

        var names = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (names.Length >= 2)
            return $"{names[0][0]}{names[1][0]}".ToUpper();
        else if (names.Length == 1)
            return names[0].Length >= 2 ? names[0].Substring(0, 2).ToUpper() : names[0].ToUpper();
        else
            return "??";
    }
}