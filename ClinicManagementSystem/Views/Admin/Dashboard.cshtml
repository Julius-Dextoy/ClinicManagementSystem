@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalDoctors</h4>
                        <p>Total Doctors</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-user-md fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalPatients</h4>
                        <p>Total Patients</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalAppointments</h4>
                        <p>Appointments</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-calendar-check fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.PendingAppointments</h4>
                        <p>Pending</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Admin" asp-action="AddDoctor" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Doctor
                    </a>
                    <a asp-controller="Admin" asp-action="Doctors" class="btn btn-outline-primary">
                        <i class="fas fa-list"></i> Manage Doctors
                    </a>
                    <a asp-controller="Admin" asp-action="Patients" class="btn btn-outline-success">
                        <i class="fas fa-users"></i> View Patients
                    </a>
                    <a asp-controller="Admin" asp-action="Appointments" class="btn btn-outline-info">
                        <i class="fas fa-calendar"></i> Manage Appointments
                    </a>
                   
                </div>
            </div>
        </div>
    </div>
</div>